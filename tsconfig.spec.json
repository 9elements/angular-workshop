{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine", "node"]
  },
  "files": ["src/test.ts", "src/polyfills.ts"],
  "include": ["src/**/*.spec.ts", "src/**/*.spec-helper.ts", "src/**/*.d.ts"],
  "exclude": [
    // Exclude cypress dir here so the global Jest types are not overwritten
    "cypress"
  ]
}
